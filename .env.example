# Office MCP Server 环境变量配置示例
# 复制此文件为 .env 并根据需要修改配置

# ============================================
# 服务器配置
# ============================================
SERVER_NAME=office-mcp-server
SERVER_VERSION=1.0.0
LOG_LEVEL=INFO
MAX_FILE_SIZE=104857600

# ============================================
# 日志配置
# ============================================
# 是否输出日志到文件 (true/false)
LOG_TO_FILE=true

# 日志轮转大小 (例如: "10 MB", "100 MB", "1 GB")
LOG_ROTATION=10 MB

# 日志保留时间 (例如: "7 days", "1 week", "1 month")
LOG_RETENTION=7 days

# 日志压缩格式 (zip, gz, tar.gz)
LOG_COMPRESSION=zip

# ============================================
# 路径配置
# ============================================
TEMP_DIR=temp
OUTPUT_DIR=output
TEMPLATE_DIR=templates
LOGS_DIR=logs

# ============================================
# Word 配置
# ============================================
WORD_DEFAULT_FONT=宋体
WORD_DEFAULT_FONT_SIZE=12
WORD_DEFAULT_LINE_SPACING=1.5

# ============================================
# Excel 配置
# ============================================
EXCEL_DEFAULT_SHEET_NAME=Sheet1
EXCEL_MAX_ROWS=1048576
EXCEL_MAX_COLS=16384

# ============================================
# PowerPoint 配置
# ============================================
PPT_DEFAULT_WIDTH=9144000
PPT_DEFAULT_HEIGHT=6858000
PPT_DEFAULT_THEME=Office Theme

