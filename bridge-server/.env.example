# Bridge Server配置

# 服务器端口
PORT=3001

# MCP服务器路径
MCP_SERVER_PATH=../src/office_mcp_server/main.py

# Python解释器路径
PYTHON_PATH=python

# 临时文件目录
TEMP_DIR=./temp

# 日志目录
LOG_DIR=./logs

# 日志级别 (error, warn, info, debug)
LOG_LEVEL=info

# CORS允许的源
CORS_ORIGIN=https://localhost:3000

# 文件上传大小限制 (MB)
MAX_FILE_SIZE=50
