{
  "name": "office-local-bridge",
  "version": "1.0.0",
  "description": "轻量本地桥接服务 - 用于 Office 插件与 MCP Server 通信",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:proxy": "set HTTP_PROXY=http://127.0.0.1:7890 && set HTTPS_PROXY=http://127.0.0.1:7890 && tsx watch src/server.ts",
    "dev:all": "concurrently -n \"server,desktop\" -c \"cyan,magenta\" \"npm run dev\" \"npm run desktop\"",
    "dev:all:proxy": "concurrently -n \"server,desktop\" -c \"cyan,magenta\" \"npm run dev:proxy\" \"npm run desktop\"",
    "desktop": "cd desktop-app && npm run tauri:dev",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "pkg:win": "pkg dist/server.js -t node18-win-x64 -o dist/office-local-bridge-win.exe",
    "pkg:mac": "pkg dist/server.js -t node18-macos-x64 -o dist/office-local-bridge-mac"
  },
  "keywords": [
    "office",
    "mcp",
    "bridge",
    "local-service"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.17.1",
    "@types/ws": "^8.5.13",
    "concurrently": "^9.2.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
