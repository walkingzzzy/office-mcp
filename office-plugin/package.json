{
  "name": "@wuhanwenjin/office-plugin",
  "version": "1.0.0",
  "description": "武汉问津 AI 助手 Office 插件 - 支持 Word、Excel、PowerPoint",
  "private": true,
  "type": "module",
  "main": "dist/taskpane.js",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite --host",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:perf": "vitest run src/tests/performance.test.ts",
    "test:word": "vitest run src/services/WordService.test.ts src/utils/diffUtils.test.ts src/hooks/useWordEdit.test.ts",
    "e2e:install": "pwsh -ExecutionPolicy Bypass -File ./scripts/Test-OfficePluginInstall.ps1",
    "e2e:host": "pwsh -ExecutionPolicy Bypass -File ./scripts/Test-OfficePluginHost.ps1",
    "start": "office-addin-debugging start manifest.xml desktop",
    "stop": "office-addin-debugging stop manifest.xml",
    "validate": "office-addin-manifest validate manifest.xml",
    "cert:install": "office-addin-dev-certs install",
    "cert:verify": "office-addin-dev-certs verify"
  },
  "dependencies": {
    "@fluentui/react-components": "^9.72.2",
    "@fluentui/react-icons": "^2.0.312",
    "@tanstack/react-query": "^5.90.5",
    "@tanstack/react-virtual": "^3.13.12",
    "axios": "^1.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "diff-match-patch": "^1.0.5",
    "eventsource": "^2.0.2",
    "highlight.js": "^11.9.0",
    "jszip": "^3.10.1",
    "mammoth": "^1.8.0",
    "markdown-it": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-textarea-autosize": "^8.5.9",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@microsoft/office-js": "^1.1.110",
    "@tailwindcss/vite": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/diff-match-patch": "^1",
    "@types/highlight.js": "^10.1.0",
    "@types/jsdom": "^27",
    "@types/markdown-it": "^14.0.0",
    "@types/node": "^22.17.1",
    "@types/office-js": "^1.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.22",
    "happy-dom": "^20.0.10",
    "jsdom": "^27.2.0",
    "office-addin-debugging": "^5.0.0",
    "office-addin-dev-certs": "^1.13.0",
    "office-addin-manifest": "^1.13.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
